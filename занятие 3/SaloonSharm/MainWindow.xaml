<Window x:Class="SaloonSharm.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SaloonSharm"
        mc:Ignorable="d"
        Title="Салон красоты 'Шарм'" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.15*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <Image Margin="5" Grid.Row="0" Source="logo.png"/>
            <TextBlock x:Name="pageName" Margin="5" VerticalAlignment="Center" Text="Главное окно" FontSize="22" FontFamily="Tahoma" />
        </StackPanel>
        <Frame Grid.Row="1" x:Name="mainFrame"/>
    </Grid>
</Window>
